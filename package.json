{
  "name": "gpda-api",
  "version": "1.0.0",
  "description": "Desenvolvendo API que ser√° implementada ao gpda-web",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "npm run migration:up && npm run setup-admin-user && NODE_ENV=production node src/index.js",
    "setup": "npm run service:up && npm run wait-for-postgres && npm run migration:up && node src/index.js",
    "dev": "NODE_ENV=development npm run setup",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "npx eslint .",
    "test": "npm run service:up && concurrently -n dev,jest --hide dev -k -s command-jest \"NODE_ENV=test npm run setup\" \"node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "style:check": "prettier --check [files]",
    "style:fix": "prettier --write [files]",
    "service:up": "docker compose -f infra/compose.yaml up -d",
    "service:stop": "docker compose -f infra/compose.yaml stop",
    "service:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env down",
    "setup-admin-user": "node infra/scripts/admin.js",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": "https://github.com/Projeto-Stratum/gpda-api.git",
  "author": "Nicolas 'grecoww' Greco",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcrypt": "5.1.1",
    "body-parser": "1.20.3",
    "express": "4.21.1",
    "express-session": "1.18.1",
    "express-validator": "7.2.0",
    "node-pg-migrate": "7.7.1",
    "nodemailer": "6.9.15",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "pg": "8.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.12.0",
    "commitizen": "4.3.1",
    "concurrently": "9.0.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "ejs": "3.1.10",
    "eslint": "9.12.0",
    "eslint-plugin-jest": "28.8.3",
    "globals": "15.11.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "prettier": "3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
